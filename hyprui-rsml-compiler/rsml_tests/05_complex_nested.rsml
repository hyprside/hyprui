<container
    direction={Direction::Column}
    padding_all={20}
    background_color={(0x1a, 0x1a, 0x1a)}
    rounded={12.0}
    w_expand>

    <container
        direction={Direction::Row}
        padding_all={16}
        background_color={(0x2a, 0x2a, 0x2a)}
        rounded={8.0}
        center>
        <text font_size={20} color={(255, 255, 255, 255).into()} font_family="UbuntuSans NF">User Profile</text>
    </container>

    <container padding_all={10}>
        <UserAvatar size={64} />

        <container direction={Direction::Column} weird_padding={0, 0, 0, 16}>
            <text font_size={16} color={(200, 200, 200, 255).into()}>John Doe</text>
            <text font_size={12} color={(150, 150, 150, 255).into()}>Software Engineer</text>
        </container>
    </container>

    <container
        direction={Direction::Row}
        padding_all={8}
        center>
        <container
            background_color={(0x00, 0x7a, 0xcc)}
            padding_all={12}
            rounded={6.0}
            on_click={|| handle_edit()}
        		on_mouse_enter={|| set_hover_state(true)}
            >
            <text color={(255, 255, 255, 255).into()}>Edit Profile</text>
        </container>

        <container
            background_color={(0xcc, 0x00, 0x00)}
            padding_all={12}
            rounded={6.0}
            on_click={move || confirm_delete(user.id)}>
            <text color={(255, 255, 255, 255).into()}>Delete</text>
        </container>
    </container>
</container>
